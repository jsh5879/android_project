<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/radial_gradient_bkg">

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="match_parent"
        android:layout_marginTop="30px"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:text="ID"
            android:textColor="#ff0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/viewID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="View ID"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:text="PhoneNumber"
            android:textColor="#ff0"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/viewNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="View Number"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:text="Name"
            android:textColor="#ff0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/viewName"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="View Name"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:text="Message"
            android:textColor="#ff0"
            android:textSize="20dp" />


        <Button
            android:id="@+id/modifyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:background="@drawable/blue_btn_bkg"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="MODIFY"/>

    </LinearLayout>
    <TextView
        android:id="@+id/viewMessage"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="상태 메세지를 입력하세요."
        android:textColor="#fff"
        android:textSize="18dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Logout"
        android:textStyle="bold"
        android:background="@drawable/blue_btn_bkg"
        android:textColor="#fff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

</LinearLayout>